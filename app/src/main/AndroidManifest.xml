<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.terrytsai.caloriecalculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainScreen"
            android:label="Calorie Calculator">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:label="Calculate Exercise"
            android:name=".MainActivity" >
        </activity>
        <activity
            android:label="Select Exercise"
            android:name=".SelectExercise" >
        </activity>
        <activity
            android:label="Enter Exercise Amount"
            android:name=".EnterExerciseAmount" >
        </activity>
        <activity
            android:label="Result"
            android:name=".ExerciseResult" >
        </activity>
    </application>

</manifest>
